<%- include partials/partials %>

<div class="d-flex flex-column align-items-center justify-content-center" >
	<div id="header">
		<span style="font-family: Quicksand;">Express</span>
		<span>Liste voitures</span>
	</div>
	<div id="recherche" class="container">
		<ul id="historiques"></ul>
	</div>
	<div class="container">
		<div class="d-flex flex-column">
			<div class="d-flex flex-column">
				<div class="form-group">
					<select class="form-control" name="" id="marques">
						<option value="">Modeles</option>
					</select>
				</div>
				<div class="form-group">
					<select class="form-control" name="" id="models">
						<option value="">Modeles</option>
					</select>	
				</div>
			</div>

			<div
				class="card shadow"
				id="infos"
				style="width: 25rem; margin-right: 10px;"
			>
				<div class="card-header m-auto text-center">
					<h3>Fiche technique</h3>
				</div>

				<div class="card-body" style="background-color: #c4dfaf;">
					<span id="fiche"></span>
				</div>
			</div>
		</div>
	</div>
</div>


	<style>
		#header {
			width: 100%;
			height: 100%;
			outline: solid 1px gainsboro;
			box-shadow: 0px 8px 2px -3px rgba(0, 0, 0, 0.42);
			display: grid;
			grid-template-columns: 1.8fr 2fr;
			margin-bottom: 20px;
		}
		#infos {
			display: none;
		}
		.item {
			color: white;
			font-family: "Verdana";
			background-color: burlywood;
			border-radius: 9px;
			outline: solid 1px gainsboro;
			box-shadow: 0px 8px 2px -3px rgba(0, 0, 0, 0.42);
			padding: 5px;
			margin: 10px 0px;
			display: flex;
			flex-direction: row;
		}
		#historiques {
			background-color: #f7f7f9;
			list-style: none;
			padding: 0;
		}
		li {
			background-color: #c2c8cf;
			border-radius: 9px;
			margin-left: 10px;
			padding-left: 10px;
			margin-top: 5px;
		}
		#historiques span {
			font-family: "QuickSand";
			color: #f1efe2;
		}
		.select2 {
			width: 100%;
		}
	</style>
	<%- include partials/script %>
	<script>
		$(document).ready(function () {
			$.ajax({
				url: "/liste/",

				success: (data) => {
					console.log(data);
					$("#marques").html("");
					data.forEach((d) => {
						$("#marques").append(
							"<option value=" +
								d.make_id +
								">" +
								d.make_display +
								"</option>"
						);
					});
				},
			});

			listehistorique();
		});

		$("#marques").on("change", () => {
			$.ajax({
				url: "/getinfo/" + $("#marques").val(),
				type: "POST",
				success: function (data) {
					//The 'data' variable contains all response data.
					var makes = data.Trims;
					for (var i = 0; i < makes.length; i++) {
						//You can now do what you like with the response data
						if (makes[i].model_trim === '' || makes[i].model_trim === null) makes[i].model_trim = '<Nom du modèle non trouvé>';
						$("#models").append(
							"<option value=" +
								makes[i].model_id +
								">" +
								makes[i].model_trim +
								"</option>"
						);
					}
					$("#models").select2();
				},
			});
		});

		$("#models").on("change", () => {
			data = {};
			data["marque"] = $("#marques").val();
			$.ajax({
				url: "/getfiche/" + $("#models").val(),
				type: "post",
				data: data,
				success: function (data) {
					console.log(data);
					//The 'data' variable contains all response data
					$("#fiche").html("");
					for (k in data) {
						$("#fiche").append(
							"<span class='item'>" +
								k +
								" : " +
								data[k] +
								"</span></br>"
						);
					}
					$("#infos").css({
						display: "flex",
						flexDirection: "column",
					});

					$("#historiques").load("#historiques");
				},
			});
		});

		function listehistorique() {
			$.ajax({
				url: "/historiques/",

				success: (data) => {
					$("#historiques").html("");
					data.forEach((d) => {
						t = new Date(d.date);
						date =
							typeof d.date != "undefined"
								? t.toLocaleDateString()
								: "N/A";
						$("#historiques").append(
							"<li><span>" +
								date +
								"</span>:" +
								d.marque +
								"-" +
								d.model +
								"</li>"
						);
					});
				},
			});
		}
	</script>
</div>

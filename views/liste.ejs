<%- include partials/partials %>
       

<div class="container d-flex flex-column align-items-center justify-content-center">
<div id="header">
    <span style="font-family: Quicksand;">Express</span>
    <span>Liste voitures</span>
</div>
<div class="d-flex flex-row">
  <div class="d-flex flex-column">
        <div class="d-flex flex-row">


<select name="" id="marques">
        <option value="">Modeles</option>
</select>

<select name="" id="models">
    <option value="">Modeles</option>
</select>
</div>

<div
      class="card shadow"
      id="infos"
      style="width: 25rem;margin-right: 10px;"
    >
      <div class="card-header m-auto text-center">
        <h3>Fiche technique</h3>
      </div>

      <div class="card-body" style="background-color: #c4dfaf;">
        <span id="fiche"></span>
      </div>
    </div>
  </div>



<div i="recherche">
<ul id="historiques">

</ul>

</div>

</div>

<style>
#header{
    width: 140%;
height: 100%;
outline:solid 1px gainsboro;
box-shadow: 0px 8px 2px -3px rgba(0,0,0,0.42);
display: grid;
grid-template-columns: 1.8fr 2fr;
margin-bottom: 20px;
}
    #infos{
        display:none;
    }
    .item {
        color: white;
        font-family: "Verdana";
        background-color: burlywood;
        border-radius: 9px;
        outline: solid 1px gainsboro;
        box-shadow: 0px 8px 2px -3px rgba(0, 0, 0, 0.42);
        padding: 5px;
        margin: 10px 0px;
        display: flex;
        flex-direction: row;
      }

</style>
<%- include partials/script %>
<script>
   $(document).ready(function() {
$.ajax({
    url:"/liste/",

    success:(data)=>{
$("#marques").html("");
data.forEach(d=>{
    $("#marques").append("<option value="+d.make_id+">"+d.make_display+"</option>")
})
    } 
})

listehistorique();
})

$("#marques").on("change",()=>{

$.ajax({
    url:"/getinfo/"+$("#marques").val(),
    type:"POST",
    success:function(data) {
            //The 'data' variable contains all response data.
            var makes = data.Trims;
            for (var i = 0; i < makes.length; i++) {
              //You can now do what you like with the response data
              $("#models").append(
                "<option value=" +
                  makes[i].model_id +
                  ">" +
                  makes[i].model_trim +
                  "</option>"
              );
            }

        }
})

})

$("#models").on("change", () => {
  data={}
  data["marque"]=$("#marques").val()
        $.ajax({
         url: "/getfiche/" +
            $("#models").val() ,
            type:"post",
            data:data,
        success :  function(data) {
              console.log(data)
            //The 'data' variable contains all response data
            $("#fiche").html("");
            for (k in data) {
              $("#fiche").append(
                "<span class='item'>" + k + " : " + data[k] + "</span></br>"
              );
            }
            $("#infos").css({ display: "flex", flexDirection: "column" });
          }
        }
        );
        $('#models').select2();
        $("#historiques").load("#historiques");
      });

      function listehistorique(){
        $.ajax({
    url:"/historiques/",

    success:(data)=>{
$("#historiques").html("");
data.forEach(d=>{
    $("#historiques").append("<li>"+d.marque+"-"+d.model+"</li>")
})
    } 
})
      }
</script>